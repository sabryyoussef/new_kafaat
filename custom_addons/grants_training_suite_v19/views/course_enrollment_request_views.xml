    <!-- Course Enrollment Request Kanban View -->
    <record id="view_course_enrollment_request_kanban" model="ir.ui.view">
        <field name="name">course.enrollment.request.kanban</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="student_id"/>
                <field name="course_name"/>
                <field name="request_date"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="student_id"/>
                                    <br/>
                                    <field name="course_name"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="request_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label" 
                                               decoration-info="state == 'draft'" 
                                               decoration-warning="state == 'pending'" 
                                               decoration-success="state == 'approved'" 
                                               decoration-danger="state == 'rejected'"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Course Enrollment Request Action -->
    <record id="action_course_enrollment_request" model="ir.actions.act_window">
        <field name="name">Enrollment Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new enrollment request
            </p>
            <p>
                Students can request to enroll in courses. Admins can approve or reject these requests.
            </p>
        </field>
    </record>

    <!-- Pending Enrollment Requests Action -->
    <record id="action_course_enrollment_request_pending" model="ir.actions.act_window">
        <field name="name">Pending Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('state', '=', 'pending')]</field>
        <field name="context">{'search_default_filter_pending': 1}</field>
    </record>

    <!-- Approved Enrollment Requests Action -->
    <record id="action_course_enrollment_request_approved" model="ir.actions.act_window">
        <field name="name">Approved Requests</field>
        <field name="res_model">course.enrollment.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'approved')]</field>
        <field name="context">{'search_default_filter_approved': 1}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_course_enrollment_request_root"
              name="Enrollment Requests"
              parent="grants_training_suite_v19.menu_grants_training_students"
              sequence="25"/>

    <menuitem id="menu_course_enrollment_request_all"
              name="All Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request"
              sequence="1"/>

    <menuitem id="menu_course_enrollment_request_pending"
              name="Pending Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request_pending"
              sequence="2"/>

    <menuitem id="menu_course_enrollment_request_approved"
              name="Approved Requests"
              parent="menu_course_enrollment_request_root"
              action="action_course_enrollment_request_approved"
              sequence="3"/>

</odoo>
