<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Ensure parent menu exists (in case menu_views.xml not loaded yet) -->
    <!-- Main menu root -->
    <menuitem id="menu_grants_training_main"
              name="Grants Training"
              sequence="10"
              web_icon="grants_training_suite_v19,static/description/icon.png"/>
    
    <!-- Student Management submenu -->
    <menuitem id="menu_grants_training_students"
              name="Student Management"
              parent="menu_grants_training_main"
              sequence="10"/>
    
    <!-- Course Enrollment Request Form View -->
    <record id="view_course_enrollment_request_form" model="ir.ui.view">
        <field name="name">course.enrollment.request.form</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <form string="Course Enrollment Request">
                <header>
                    <button name="action_submit" string="Submit Request" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="btn-success" invisible="state != 'pending'"
                            groups="grants_training_suite_v19.group_agent,grants_training_suite_v19.group_manager"/>
                    <button name="action_reject" string="Reject" type="object" 
                            class="btn-danger" invisible="state != 'pending'"
                            groups="grants_training_suite_v19.group_agent,grants_training_suite_v19.group_manager"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'rejected'"
                            groups="grants_training_suite_v19.group_agent,grants_training_suite_v19.group_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(grants_training_suite_v19.action_gr_course_session)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-calendar"
                                invisible="not session_id"
                                context="{'search_default_session_id': session_id}">
                            <field name="session_id" widget="statinfo" string="Session"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True}"/>
                            <field name="student_email" readonly="1"/>
                            <field name="course_integration_id" options="{'no_create': True}"/>
                            <field name="course_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="1"/>
                            <field name="approved_by" readonly="1" invisible="state != 'approved'"/>
                            <field name="approved_date" readonly="1" invisible="state != 'approved'"/>
                            <field name="rejected_by" readonly="1" invisible="state != 'rejected'"/>
                            <field name="rejected_date" readonly="1" invisible="state != 'rejected'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Request Details">
                            <group>
                                <field name="notes" placeholder="Why do you want to enroll in this course?"/>
                            </group>
                        </page>
                        <page string="Admin Notes" groups="grants_training_suite_v19.group_agent,grants_training_suite_v19.group_manager">
                            <group>
                                <field name="admin_notes" placeholder="Internal notes for admins..."/>
                                <field name="rejection_reason" placeholder="Reason for rejection (shown to student)..." invisible="state != 'rejected'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Course Enrollment Request List View -->
    <record id="view_course_enrollment_request_list" model="ir.ui.view">
        <field name="name">course.enrollment.request.list</field>
        <field name="model">course.enrollment.request</field>
        <field name="arch" type="xml">
            <list string="Course Enrollment Requests" default_order="request_date desc">
                <field name="name"/>
                <field name="student_id"/>
                <field name="course_name"/>
                <field name="request_date"/>
                <field name="state" decoration-info="state == 'draft'" 
                       decoration-warning="state == 'pending'" 
                       decoration-success="state == 'approved'" 
                       decoration-danger="state == 'rejected'"/>
                <field name="approved_by" optional="hide"/>
                <field name="approved_date" optional="hide"/>
            </list>
        </field>
    </record>

