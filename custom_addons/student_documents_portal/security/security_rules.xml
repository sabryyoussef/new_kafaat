<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Request Portal Security Rules -->
    
    <!-- Portal users can only see their own document requests -->
    <record id="document_request_portal_rule" model="ir.rule">
        <field name="name">Portal: Students can only see their own document requests</field>
        <field name="model_id" ref="model_gr_document_request_portal"/>
        <field name="domain_force">[('student_id.email', '=', user.email)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Managers and agents can see all document requests -->
    <record id="document_request_portal_manager_agent_rule" model="ir.rule">
        <field name="name">Document Requests: Manager and Agent Access</field>
        <field name="model_id" ref="model_gr_document_request_portal"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('grants_training_suite_v19.group_manager')), (4, ref('grants_training_suite_v19.group_agent'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
