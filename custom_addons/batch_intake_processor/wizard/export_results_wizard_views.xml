<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Export Wizard Form -->
    <record id="view_export_results_wizard_form" model="ir.ui.view">
        <field name="name">batch.intake.export.wizard.form</field>
        <field name="model">batch.intake.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Results">
                <group invisible="state == 'done'">
                    <field name="batch_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="export_format"/>
                    <field name="filter_status"/>
                    <field name="include_validation_notes"/>
                </group>
                <group invisible="state != 'done'">
                    <field name="exported_file" widget="binary" filename="exported_filename" readonly="1"/>
                    <field name="exported_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_export" string="Export" type="object" 
                            class="btn-primary" invisible="state == 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

