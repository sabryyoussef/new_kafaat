<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Applicant Form View -->
    <record id="view_batch_intake_applicant_form" model="ir.ui.view">
        <field name="name">batch.intake.applicant.form</field>
        <field name="model">batch.intake.applicant</field>
        <field name="arch" type="xml">
            <form string="Applicant">
                <header>
                    <button name="action_mark_eligible" string="Mark Eligible" type="object" 
                            class="btn-success" invisible="eligibility_status == 'eligible'"/>
                    <button name="action_mark_not_eligible" string="Mark Not Eligible" type="object" 
                            class="btn-danger" invisible="eligibility_status == 'not_eligible'"/>
                    <button name="action_recheck_eligibility" string="Recheck" type="object" 
                            class="btn-primary"/>
                    <field name="eligibility_status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Personal Information">
                            <field name="batch_id"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="age"/>
                            <field name="nationality"/>
                        </group>
                        <group string="Academic Information">
                            <field name="education_level"/>
                            <field name="gpa"/>
                            <field name="english_level"/>
                        </group>
                    </group>
                    
                    <group string="Eligibility Assessment">
                        <group>
                            <field name="eligibility_score" widget="progressbar"/>
                            <field name="age_check"/>
                            <field name="education_check"/>
                        </group>
                        <group>
                            <field name="gpa_check"/>
                            <field name="english_check"/>
                        </group>
                    </group>
                    
                    <group string="Validation Notes">
                        <field name="validation_notes" nolabel="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Applicant List View -->
    <record id="view_batch_intake_applicant_list" model="ir.ui.view">
        <field name="name">batch.intake.applicant.list</field>
        <field name="model">batch.intake.applicant</field>
        <field name="arch" type="xml">
            <list string="Applicants">
                <field name="batch_id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="age"/>
                <field name="education_level"/>
                <field name="gpa"/>
                <field name="eligibility_score"/>
                <field name="eligibility_status" widget="badge"
                       decoration-success="eligibility_status == 'eligible'"
                       decoration-danger="eligibility_status == 'not_eligible'"
                       decoration-warning="eligibility_status == 'pending'"
                       decoration-muted="eligibility_status == 'error'"/>
            </list>
        </field>
    </record>

    <!-- Applicant Search View -->
    <record id="view_batch_intake_applicant_search" model="ir.ui.view">
        <field name="name">batch.intake.applicant.search</field>
        <field name="model">batch.intake.applicant</field>
        <field name="arch" type="xml">
            <search string="Search Applicants">
                <field name="name"/>
                <field name="email"/>
                <field name="batch_id"/>
                <separator/>
                <filter string="Eligible" name="eligible" domain="[('eligibility_status', '=', 'eligible')]"/>
                <filter string="Not Eligible" name="not_eligible" domain="[('eligibility_status', '=', 'not_eligible')]"/>
                <filter string="Pending" name="pending" domain="[('eligibility_status', '=', 'pending')]"/>
                <filter string="Errors" name="error" domain="[('eligibility_status', '=', 'error')]"/>
                <group>
                    <filter string="Batch" name="group_batch" context="{'group_by': 'batch_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'eligibility_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Applicant Action -->
    <record id="action_batch_intake_applicant" model="ir.actions.act_window">
        <field name="name">Applicants</field>
        <field name="res_model">batch.intake.applicant</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No applicants yet!
            </p>
            <p>
                Upload a batch file to create applicant records.
            </p>
        </field>
    </record>
</odoo>

