<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="emp_sequence" model="ir.sequence">
        <field name="name">Employee Sequence</field>
        <field name="code">hr.employee</field>
        <field eval="1" name="number_next" />
        <field eval="1" name="number_increment" />
        <field eval="False" name="company_id" />
        <field name="padding">6</field>
    </record>
	
	<!-- add relationship data -->

    <record id="employee_relationship" model="hr.employee.relation">
            <field name="name">Spouse</field>
    </record>

    <record id="employee_relationship_father" model="hr.employee.relation">
            <field name="name">Father</field>
    </record>

    <record id="employee_relationship_mother" model="hr.employee.relation">
            <field name="name">Mother</field>
    </record>

    <record id="employee_relationship_daughter" model="hr.employee.relation">
            <field name="name">Daughter</field>
    </record>
	
    <record id="employee_relationship_son" model="hr.employee.relation">
            <field name="name">Son</field>
    </record>

    <record id="category_ids_ft" model="hr.employee.category">
            <field name="name">Full Time</field>
    </record>
	
	<record id="category_ids_pt" model="hr.employee.category">
            <field name="name">Part Time</field>
    </record>
	

	<record id="category_ids_l30" model="hr.employee.category">
            <field name="name">Leaves 30</field>
    </record>	
	
	<record id="category_ids_l21" model="hr.employee.category">
            <field name="name">Leaves 21</field>
    </record>	
	
</odoo>
