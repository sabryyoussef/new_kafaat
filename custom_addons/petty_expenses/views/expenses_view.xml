<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<!-- Expenses -->
        <record id="hr_expense_form_view_petty" model="ir.ui.view">
            <field name="name">hr.expense.form.advance</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//header" position="inside">
					<button name="confirm_advance_reconcile"
							type="object"
							string="Confirm Advance Reconcile"
							class="btn-primary"
							invisible="state != 'approved' or payment_mode != 'pr'"/>
				</xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="type" invisible="payment_mode != 'pr'"/>
                    <field name="expense_attachment"/>
                </xpath>
				<xpath expr="//button[@name='action_post']" position="attributes">
					<attribute name="invisible">payment_mode == 'pr'</attribute>
				</xpath>

           </field>
        </record>
		
		
		<record id="view_account_payment_form_inherit" model="ir.ui.view">
			<field name="name">account.payment.form.inherit.reconcile.partner</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='journal_id']" position="after">
					<field name="reconcile_partner" required="journal_id.code == 'EADV'" />
				</xpath>
			</field>
		</record>
		<record id="view_account_payment_register_form_inherit_reconcile_partner" model="ir.ui.view">
			<field name="name">account.payment.register.form.inherit.reconcile.partner</field>
			<field name="model">account.payment.register</field>
			<field name="inherit_id" ref="account.view_account_payment_register_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='journal_id']" position="after">
					<field name="reconcile_partner"/>
				</xpath>
			</field>
		</record>


    </data>
</odoo>
